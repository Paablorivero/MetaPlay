         <children>
            <Button mnemonicParsing="false" styleClass="btn-inicioSesion" stylesheets="@../../../style.css" text="Iniciar Sesion" translateX="250.0" translateY="-70.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Label prefHeight="76.0" prefWidth="450.0" text="MetaPlay">
               <font>
                  <Font name="Magneto Bold" size="52.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="106.0" fitWidth="114.0">
                     <image>
                        <Image url="@../../../videojuego.png" />
                     </image>
                  </ImageView>
